{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Flash",
            "type": "shell",
            "command": "openocd -f board/st_nucleo_f3.cfg -c \"program ${command:cmake.getLaunchTargetFilename} verify\" -c \"reset halt\" -c shutdown",
            "options": {
                "cwd": "${command:cmake.getLaunchTargetDirectory}",
            },
            "problemMatcher": [],
            "dependsOn": [
                "Build"
            ]
        },
        {
            "label": "Build",
            "type": "cmake",
            "command": "build",
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ]
}